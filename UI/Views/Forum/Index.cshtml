@{
}
@model UI.Models.ForumModel.Forumindex


<h1>Topics</h1>
<table class="table table-hover" id="Forumindextable">
    <tbody>
            @foreach (var item in Model.Forumlisting)
            {
                <tr>
                    <td>
                        <a asp-controller="Forum" asp-action="Topic" asp-route-id="@item.id">
                            @item.name
                        </a>
                    </td>
                    <td>
                        @item.Description
                    </td>
                </tr>
                
            }
    </tbody>
</table>