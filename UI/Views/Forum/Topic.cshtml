@{
}
@model UI.Models.Forum.ForumtopicModel

<h1> Welcome to the @Model.Forum.name Forums! </h1>

@if(@Model.Posts.Any())
{
    <table class="table table-bordered table-hover">
        <tbody>
            @foreach (var item in @Model.Posts)
            {
                <tr>
                    <td>
                         <a asp-controller="Post" asp-action="Index" asp-route-id="@item.TitlePost">
                        @item.TitlePost
                        </a>
                    </td>
                    <td>
                         <a asp-controller="Post" asp-action="Index" asp-route-id="@item.UserName">
                        @item.UserName
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Post" asp-action="Index" asp-route-id="@item.DatedPosted">@item.DatedPosted</a>
                        
                    </td>
                    <td>
                        <a asp-controller="Post" asp-action="Index" asp-route-id="@item.ReplyCount"> @item.ReplyCount</a>
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

else{
    <div class="noPosts">
        <h3>
          there are no post in @Model.Forum.name
          <br/>
          <a asp-controller="Forum" asp-action="Create" asp-route-id="@Model.Forum.id">
             <span>Create Post</span>
          </a>
          one
        </h3>
    </div>
}